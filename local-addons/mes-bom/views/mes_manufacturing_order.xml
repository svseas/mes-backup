    <record id="manufacturing_order_view_tree" model="ir.ui.view">
        <field name="name">manufacturing.order.view.tree</field>
        <field name="model">mes.manufacturing.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="product"/>
