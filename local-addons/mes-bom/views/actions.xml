<odoo>
    <record id="view_table_action" model="ir.actions.act_window">
        <field name="name">Test Div View</field>
        <field name="res_model">table.test</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_table_form" model="ir.ui.view">
        <field name="name">table.test.view</field>
        <field name="model">table.test</field>
        <field name="arch" type="xml">
            <form string="Your Model" class="custom-full-screen">
                <link rel="stylesheet" href="/mes-bom/static/src/css/table_style.css"/>
                <notebook>
                    <page string="Test Page">
                        <group>
                            <div id="table-container">
                            </div>
                        </group>
                    </page>
                </notebook>
                <script type="text/javascript" src="/mes-bom/static/src/js/table_script.js"/>
            </form>
        </field>
    </record>

</odoo>
